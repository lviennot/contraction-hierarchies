#ifndef EDGE_HH
#define EDGE_HH

#include <assert.h>

namespace edge { // Various edge information.

    template <typename V, // vertex number type
              typename W=unsigned int> // default weight is 1
    struct dst_only {
        V dst;
        dst_only(V v) : dst(v) {}
        dst_only() {}
        operator V() const { return dst; }
        V destination() const { return dst; }
        W weight() const { return 1u; }
    };

    template <typename V, // vertex number type
              typename W> // weight type
    struct dst_wgt : public dst_only<V, W> {
        W wgt;
        dst_wgt(V v, W w) : dst_only<V, W>::dst_only(v), wgt(w) {}
        dst_wgt() {}
        W weight() const { return wgt; }
    };

    template<typename V, // vertex number type
             typename W=unsigned int> // default weight is 1
    struct src_dst : public dst_only<V, W> {
        V src;
        src_dst(V u, V v) : dst_only<V, W>::dst_only(v), src(u) {}
        src_dst() {}
        V source() const { return src; }
    };

    template<typename V, // vertex number type
             typename W> // weight type
    struct src_dst_wgt : public src_dst<V, W> {
        W wgt;
        src_dst_wgt(V u, V v, W w) : src_dst<V,W>::src_dst(u,v), wgt(w) {}
        src_dst_wgt(const src_dst<V,W> &e) : src_dst<V,W>::src_dst(e), wgt(1) {}
        src_dst_wgt() {}
        W weight() const { return wgt; }
        operator src_dst<V, W>()
    };

    
} // edge

#endif // EDGE_HH
